<h1 class="text-center" id="titles">Edit Device</h1>
<%= form_for [:admin, @device] do |f| %>

  <div class="text-center">
    <%= f.label :device_code, class: 'font-format' %>
    <div class="form-group">
      <%= f.text_field :device_code, class: 'form-control' %>
    </div>
  </div>

  <div class="text-center">
    <%= f.label :nickname, class: 'font-format' %>
    <div class="form-group">
      <%= f.text_field :nickname, class: 'form-control' %>
    </div>
  </div>

  <div class="text-center">
    <%= f.label :role, class: 'font-format' %>
    <div class="form-group">
      <%= f.select(:role, options_for_select(Device.roles), {}, {class: "form-control"}) %>
    </div>
  </div>


    <div class="form-group text-center">
      <%= f.submit "Submit", class: 'font-format', id: 'button-submit' %>
    </div>

<% end %>
